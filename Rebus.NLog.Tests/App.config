<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>
  <nlog>
    <extensions>
      <add assembly="MyAssembly"/>
    </extensions>
    <targets>
      <target name="f1" type="file"  layout="${message}|${rebus-correlation-id}" fileName="${basedir}/logs/logfile.log" />
    </targets>
    <rules>
      <logger name="*" minLevel="Info" appendTo="f1"/>
    </rules>
  </nlog>
</configuration>